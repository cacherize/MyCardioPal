<%= form_for @workout, html: {class: 'form'} do |f| %>
  <h1 class="formHeader"><%= @workout.new_record? ? "Add" : "Edit" %> Workout</h1>
  <% if @workout.errors.any? %>
    <div class="formErrors">
      <ul class="errorList">Form Errors:
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div><br/>
  <% end %>

  <div class="formField">
    <%= f.label :date, 'Date' %>
    <div class="fieldWrapper"><%= f.text_field :date, value: date_field_value(@workout, params[:workout]) %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :time, 'Time' %>
    <div class="hoursFieldWrapper">
      <div class="fieldWrapper"><%= text_field_tag "workout[time][hours]", '' %></div> <%= label_tag 'workout[time][hours]', "Hours" %>
    </div>
    <div class="minutesFieldWrapper">
      <div class="fieldWrapper"><%= text_field_tag "workout[time][minutes]", '' %></div> <%= label_tag 'workout[time][minutes]', "Minutes" %>
    </div>
    <div class="secondsFieldWrapper">
      <div class="fieldWrapper"><%= text_field_tag "workout[time][seconds]", '' %></div> <%= label_tag 'workout[time][seconds]', "Seconds" %>
    </div>
  </div><br/>

  <div class="formField">
    <div class="distanceFormField">
      <%= f.label :distance, "Distance" %>
      <div class="fieldWrapper"><%= text_field_tag "workout[distance][value]", '', id: 'workout_distance' %></div>
    </div>
    <div class="unitsFormField">
      <%= label_tag "workout[distance][units]", "Units" %>
      <div class="selectWrapper"><%= select_tag "workout[distance][units]", options_for_select([["Miles", "mi"], ["Feet", "ft"], ["Kilometers", "km"], ["Meters", "m"]]) %></div>
    </div>
  </div><br/>

  <div class="formField">
    <div class="weightsFormField">
      <%= f.label :weight, "Weight" %>
      <div class="fieldWrapper"><%= text_field_tag "workout[weight][value]", '', id: 'workout_weight' %></div>
    </div>
    <div class="unitsFormField">
      <%= label_tag "workout[weight][units]", "Units" %>
      <div class="selectWrapper"><%= select_tag "workout[weight][units]", options_for_select([["Pounds", "lb"], ["Kilograms", "kg"]]) %></div>
    </div>
  </div><br/>

  <div class="formField">
    <%= f.label :note %>
    <div class="textAreaWrapper"><%= f.text_area :note %></div>
  </div><br/>

  <div class="formSubmit">
    <%= f.submit %>
  </div>
<% end %>