<%= form_for @user, html: {class: 'form'} do |f| %>
  <h1 class="formHeader">Sign-Up</h1>
  <% if @user.errors.any? %>
    <div class="formErrors">
      <ul class="errorList">Form Errors:
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div><br/>
  <% end %>

  <div class="formField">
    <%= f.label :first, "First Name" %>
    <div class="fieldWrapper"><%= f.text_field :first %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :last, "Last Name" %>
    <div class="fieldWrapper"><%= f.text_field :last %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :username, "Username" %>
    <div class="fieldWrapper"><%= f.text_field :username %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :email, "E-Mail" %>
    <div class="fieldWrapper"><%= f.email_field :email %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :password, "Password" %>
    <div class="fieldWrapper"><%= f.password_field :password %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <div class="fieldWrapper"><%= f.password_field :password_confirmation %></div>
  </div><br/>

  <div class="formField">
    <%= f.label :gender, 'Gender' %>
    <div class="selectWrapper"><%= f.select :gender, options_for_select([["Unspecified", "unspecified"],["Female","female"],["Male","male"]]), include_blank: 'Select a Gender' %></div>
  </div><br/>

  <div class="formSubmit">
    <%= f.submit %>
  </div>

<% end %>