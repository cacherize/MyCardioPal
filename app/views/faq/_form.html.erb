<%= form_for @new_faq, url: url_for(controller: 'faq', action: 'create'),  method: :post, html: {class: 'adminForm'} do |f| %>
  <h1 class="formHeader">New FAQ</h1>
  <div class="formField">
    <%= f.label :question %><br/>
    <%= f.text_field :question %>
  </div>
  <div class="formField">
    <%= f.label :answer %><br/>
    <%= f.text_area :answer %>
  </div>
  <div class="formSubmit"><%= f.submit "Add FAQ" %></div>
<% end %>