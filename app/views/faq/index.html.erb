<div class="pageHeader">Frequently Asked Questions</div>
<% if current_user && current_user.exec? %>
  <span class="adminSection">
    <%= link_to image_tag('icons/add.png')+ ' Add FAQ', '', class: "adminAddLink" %>
    <%= render 'form' %>
  </span>
  <%= javascript_include_tag params[:controller] %>
<% end %>
<div id="faqLegend">
  <ul id="faqIndex">
    <% @grouped_faqs.each do |group| %>
      <div class="faqIndexCol">
        <div class="colWrapper">
          <% group.each do |faq| %>
            <li><%= link_to faq.question, anchor: "faq_#{faq.id}" %></li>
          <% end %>
        </div>
      </div>
    <% end %>
    <br class="clear"/>
  </ul>
</div>
<dl id="faqList">
  <% @faqs.each do |faq| %>
    <dt id="faq_<%= faq.id %>" class="<%= 'archivedFaq' if faq.archived? %>">
      <span class="faqSymbol">Q</span><%= faq.question %>
      <% if current_user && current_user.admin? %>
        <div class="faqActions">
          <%= link_to 'Edit' %>
          &#8226;
          <%= link_to "#{faq.archived? ? 'Un' : 'A'}rchive", url_for(controller: 'faq', action: 'update', id: faq.id, faq: {archive: faq.archived? ? false : true}), method: :put %>
        </div>
      <% end %>
    </dt>
    <dd class="<%= 'archivedFaq' if faq.archived? %>"><span class="faqSymbol">A</span><%= faq.answer %></dd>
  <% end %>
</dl>
<%= link_to 'Top of page', anchor: 'top' %>