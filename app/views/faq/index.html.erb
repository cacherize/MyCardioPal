<div class="pageHeader">Frequently Asked Questions</div>
<% if current_user && current_user.exec? %>
  <span class="adminSection">
    <%= link_to image_tag('icons/add.png')+ ' Add FAQ', '', class: "adminAddLink" %>
    <%= render 'form' %>
  </span>
  <%= javascript_include_tag params[:controller] %>
<% end %>
<div id="faqLegend">
  <ul id="faqIndex">
    <% @grouped_faqs.each do |group| %>
      <div class="faqIndexCol">
        <div class="colWrapper">
          <% group.each do |faq| %>
            <li><%= link_to faq.question, anchor: "faq_#{faq.id}" %></li>
          <% end %>
        </div>
      </div>
    <% end %>
    <br class="clear"/>
  </ul>
</div>
<ul id="faqList">
  <% @faqs.each do |faq| %>
    <li id="faq_<%= faq.id %>">
      <div class="faqQuestion<%= ' archivedFaq' if faq.archived? %>">
        <span class="faqSymbol">Q</span>
        <p class="faqContent"><%= faq.question %></p>

        <% if current_user && current_user.admin? %>
          <div class="faqActions">
            <%= link_to 'Edit' %>
            &#8226;
            <%= link_to "#{faq.archived? ? 'Un' : 'A'}rchive", url_for(controller: 'faq', action: 'update', id: faq.id, faq: {archive: faq.archived? ? false : true}), method: :put, confirm: 'Are you sure?' %>
          </div>
        <% end %>
      </div>

      <div class="faqAnswer<%= ' archivedFaq' if faq.archived? %>">
        <span class="faqSymbol">A</span>
        <p class="faqContent"><%= faq.answer %></p>
      </div>
    </li>
  <% end %>
</ul>
<%= link_to 'Top of page', anchor: 'top' %>